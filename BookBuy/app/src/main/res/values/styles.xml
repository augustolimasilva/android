<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/app</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorControlNormal">@color/black_transparent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

   <style name="AppTheme_white" parent="Theme.AppCompat.Light.DarkActionBar">
       <item name="colorPrimaryDark">@color/black</item>
       <item name="colorControlNormal">@color/white</item>
       <item name="android:windowContentOverlay">@null</item>
       <item name="elevation">0dp</item>
    </style>

    <style name="Theme.Map" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorControlNormal">@color/black_transparent</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

</resources>

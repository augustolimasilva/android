<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/imagem_logo_bookbuy"
    tools:context=".LoginActivityFragment"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Book Buy"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="50dp"
            android:layout_marginLeft="80dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="UsuÃ¡rio:"
            android:id="@+id/textView"
            android:layout_marginLeft="50dp"
            android:layout_above="@+id/txtSenha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuario"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Senha:"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtSenha"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/txtEmail"
            android:layout_alignStart="@+id/txtEmail" />
    </LinearLayout>

    <Button
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="Entrar"
        android:id="@+id/bttEntrar"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Esqueceu sua senha?"
        android:id="@+id/txtRecuperarSenha"
        android:layout_below="@+id/bttEntrar"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cadastre-se!"
        android:id="@+id/txtCadastrar"
        android:layout_below="@+id/txtRecuperarSenha"
        android:layout_alignRight="@+id/txtRecuperarSenha"
        android:layout_alignEnd="@+id/txtRecuperarSenha"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ENTRAR COM FACEBOOK"
        android:id="@+id/btnEntrar"
        android:onClick="onLoginFacebook"
        android:textColor="#1a237e"
        android:textStyle="bold"
        android:password="false"
        android:layout_below="@+id/txtCadastrar"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

</LinearLayout>

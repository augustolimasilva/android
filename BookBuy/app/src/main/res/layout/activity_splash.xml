<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asilva.bookbuy.activities.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_screen"
        android:background="@drawable/imagem_logo_bookbuy"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <hollowsoft.fontdroid.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book Buy"
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:textSize="50dp"
        layout:fontPath="fonts/Pacifico.ttf"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp" />

    <hollowsoft.fontdroid.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_splash"
        android:id="@+id/textView5"
        layout:fontPath="fonts/Pacifico.ttf"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>

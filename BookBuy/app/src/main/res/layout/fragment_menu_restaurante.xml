<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asilva.bookbuy.fragments.MenuRestauranteFragment">


    <ImageView
        android:layout_width="95dp"
        android:layout_height="130dp"
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/txtRua"
        android:fontFamily="sans-serif-light"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/txtTelefone"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/txtRua"
        android:layout_alignLeft="@+id/txtRua"
        android:layout_alignStart="@+id/txtRua"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/txtEmail"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/txtTelefone"
        android:layout_alignLeft="@+id/txtTelefone"
        android:layout_alignStart="@+id/txtTelefone"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtDistancia"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/txtEmail"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_marginTop="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rttRestaurante"
        android:stepSize="0.7"
        style="@android:style/Widget.DeviceDefault.RatingBar"
        android:rating="0"
        android:numStars="5"
        android:isIndicator="true"
        android:layout_below="@+id/txtDistancia"
        android:layout_toRightOf="@+id/imgLogo"
        android:layout_toEndOf="@+id/imgLogo" />

</RelativeLayout>


